{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "baseUrl": ".",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "paths": {
            "@components/*": [
                "src/*"
            ],
            "@third_party/*": [
                "third_party/*"
            ]
        }
    },
    "include": [
        "index.ts",
        "test-console.ts",
        "test-electron.ts",
        "preload.ts",
        "src/**/*",
        "third_party/**/*",
    ],
    "exclude": [
        "node_modules/",
        "build/",
        "tests/",
        "dist/",
        "bin/",
    ]
}