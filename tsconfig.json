{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "include": [
        "index.ts",
        "test-console.ts",
        "test-electron.ts",
        "preload.ts",
        "src/**/*"
    ],
    "exclude": [
        "tests/",
        "dist/"
    ]
}